<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginBottom="5dp"
    android:gravity="end">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_sender">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileShareMessage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/profile_image"
                android:padding="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/postProfileName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:minLines="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp" />
                    <ImageView
                        android:id="@+id/userBlueTick"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/white"
                        android:src="@drawable/icon_blue_tick"
                        android:layout_toEndOf="@+id/postProfileName"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/postProfileName"
                        android:visibility="visible"
                        tools:ignore="ContentDescription" />


                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:id="@+id/currentPostTime"
                    android:textSize="16sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/messageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:text="His message"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:maxWidth="300dp"/>

        <ImageView
            android:id="@+id/messageIv"
            android:layout_width="325dp"
            android:layout_height="350dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:padding="3dp"
            android:src="@drawable/icon_image_chat"
            android:layout_marginEnd="10dp"
            tools:ignore="ContentDescription"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="12dp">

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="05:59PM"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="visible"
                />

            <ImageButton
                android:id="@+id/sendReceiptButton"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:background="@color/Outgoing_Chat_Bubble"
                android:src="@drawable/icon_send_message"
                android:visibility="visible"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>