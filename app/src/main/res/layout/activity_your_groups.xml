<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Groups.YourGroupsActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolBarYrGroups"
        app:title="Your Groups"/>

    <TextView
        android:id="@+id/aboutYourGrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All groups created by you will be displayed here"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_below="@+id/toolBarYrGroups"
        android:gravity="start" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/createdGroupsList"
        android:layout_below="@+id/aboutYourGrp"
        android:layout_margin="5dp"/>
</RelativeLayout>