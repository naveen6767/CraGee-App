<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crageeApp.appbesocial.SearchUsersActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tool_bar_search">
      <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_view_user"
            android:background="@drawable/white_grey_border_small"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_marginRight="20dp" />
    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/tool_bar_search"
        android:id="@+id/viewBelowSearchBar"
        android:background="@color/grey"/>
    <RelativeLayout
        android:id="@+id/onlineUsersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewBelowSearchBar">
        <TextView
            android:id="@+id/onlineUsersText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online Users"
            android:textSize="28sp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_margin="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/users_recycler_view"
            android:layout_below="@+id/onlineUsersText"
            android:layout_margin="5dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/search_users_rv"
        android:layout_below="@+id/tool_bar_search"
        android:layout_margin="5dp"
        android:visibility="gone"/>

</RelativeLayout>