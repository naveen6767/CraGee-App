<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Groups.CreateGroupActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolBar_create_group"
        app:title="Create Group"
        app:titleTextColor="@color/black"
        android:background="@color/green">
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBar_create_group">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_view_cover_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/Cover_Photo"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp" />
            <ImageView
                android:id="@+id/groupCover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:minHeight="200dp"
                android:textColor="@color/black"
                android:background="@drawable/white_grey_border"
                android:layout_below="@+id/txt_view_cover_photo"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/txt_view_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_below="@+id/groupCover"
                android:layout_marginLeft="20dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/et_group_name"
                android:hint="@string/enter_group_name"
                android:layout_below="@+id/txt_view_Name"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:inputType="text"
                tools:ignore="Autofill,RtlSymmetry"
                android:background="@drawable/white_grey_border"
                android:paddingStart="10dp"
                android:paddingLeft="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_layout_categories"
                android:orientation="horizontal"
                android:layout_below="@+id/et_group_name"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:id="@+id/txtCategories"
                    android:layout_gravity="center_vertical" />
                <Spinner
                    android:id="@+id/spinnerGroupCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:entries="@array/Categories_group"
                    android:background="@drawable/white_grey_border"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_layout_categories"
                android:id="@+id/relativeLayoutPrivacy"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/txtPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/privacy"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="20sp"
                    android:padding="10sp"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true" />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/radioGroupPrivacy"
                    android:layout_centerHorizontal="true"
                    android:layout_toEndOf="@+id/txtPrivacy"
                    android:layout_marginStart="30dp"
                    android:layout_toRightOf="@+id/txtPrivacy"
                    android:layout_marginLeft="30dp">
                    <RadioButton
                        android:id="@+id/radio_Public"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Public_Group"
                        android:layout_weight="1"
                        android:onClick="privacySelected"/>
                    <RadioButton
                        android:id="@+id/radio_Private"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/Private_Group"
                        android:layout_weight="1"
                        android:onClick="privacySelected"/>
                </RadioGroup>
            </RelativeLayout>
            <TextView
                android:id="@+id/txtViewAboutPublicGroups"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="@string/Tell_about_group"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_below="@+id/relativeLayoutPrivacy"
                android:layout_marginLeft="20dp" />
            <EditText
                android:id="@+id/about_group_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtViewAboutPublicGroups"
                android:layout_marginTop="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="30dp"
                android:minHeight="100dp"
                android:hint="@string/group_describe"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/white_grey_border"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                tools:ignore="Autofill"
                android:inputType="textMultiLine"
                android:minLines="6"
                android:gravity="top|left"
                android:maxLines="10"
                android:lines="8"
                android:scrollbars="vertical" />
            <include
                android:id="@+id/create_group"
                layout="@layout/progress_button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
                android:layout_marginStart="75dp"
                android:layout_marginEnd="75dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/about_group_status"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>