<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_margin="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/profile_image"
        android:padding="1dp"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notifyUserName"
        android:text="@string/user_name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@+id/user_profile_image" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dummyText"
        android:text="liked your post"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/notifyUserName"
        android:layout_marginTop="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:inputType="textMultiLine"
        android:maxLines="2"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:id="@+id/dateTime"
        android:text="@string/date"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/user_profile_image"
        android:layout_below="@+id/notifyUserName"
        android:textAlignment="viewStart"
        android:layout_marginStart="3dp"/>
    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/profile_image"
        android:id="@+id/notifyImage"
        android:layout_alignParentEnd="true"
        android:padding="1dp"/>


</RelativeLayout>